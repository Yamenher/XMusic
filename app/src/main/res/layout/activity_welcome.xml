<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/top_window"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:transitionGroup="true">
            <FrameLayout
                android:id="@+id/first_screen"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:lottie_rawRes="@raw/onboarding"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true" />
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/top_title"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:textSize="35sp"
                        android:textColor="?colorPrimary"
                        android:text="XMusic" />
                    <TextView
                        android:id="@+id/top_subtitle"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="16dp"
                        android:textSize="25sp"
                        android:textColor="?colorOnSurface"
                        android:text="Materialize your playback" />
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/begin_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:textSize="18sp"
                    android:text="Start"
                    android:layout_margin="16dp"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/second_screen"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:orientation="vertical">
                <androidx.core.widget.NestedScrollView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/screen2_text"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:textSize="25sp"
                            android:textColor="?colorOnSurface"
                            android:text="Grant permissions" />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:textSize="20sp"
                            android:textColor="?colorOutline"
                            android:text="We only use these to manage your songs" />
                        <ImageView
                            android:id="@+id/illustration2"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/intro_illustration_2"
                            android:adjustViewBounds="true"
                            android:layout_margin="50dp" />
                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:gravity="top">
                            <LinearLayout
                                android:id="@+id/first_item"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:paddingVertical="16dp"
                                android:paddingHorizontal="16dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/checkable_background_top">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/firstTitle"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Grant media access"
                                        android:textSize="20sp"
                                        android:layout_marginBottom="4dp"
                                        android:textColor="?colorOnSurface" />

                                    <TextView
                                        android:id="@+id/firstDesc"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Needed to find media on your device"
                                        android:textSize="14sp"
                                        android:textColor="?colorOutline" />

                                </LinearLayout>
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/first_grant_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Grant" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/second_item"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginHorizontal="16dp"
                                android:paddingVertical="16dp"
                                android:paddingHorizontal="16dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/checkable_background_bottom">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/secondTitle"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Grant media access"
                                        android:textSize="20sp"
                                        android:layout_marginBottom="4dp"
                                        android:textColor="?colorOnSurface" />

                                    <TextView
                                        android:id="@+id/secondDesc"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Needed to find media on your device"
                                        android:textSize="14sp"
                                        android:textColor="?colorOutline" />

                                </LinearLayout>
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/second_grant_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Grant" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/screen2_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Next"
                    android:layout_margin="8dp"
                    android:layout_gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/third_screen"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.core.widget.NestedScrollView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <LinearLayout
                        android:id="@+id/part_1_view"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/tg_icon"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="25dp"
                            android:src="@drawable/intro_illustration_3"
                            android:adjustViewBounds="true"
                            android:layout_marginHorizontal="64dp" />
                        <TextView
                            android:id="@+id/tip_text"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginVertical="32dp"
                            android:layout_marginHorizontal="32dp"
                            android:textSize="16dp"
                            android:textColor="?colorOnSurface"
                            android:text="Join our telegram group for support, community chat, sneak peaks and more!" />
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/screen3_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="Skip"
                                android:textColor="?colorPrimary"
                                android:layout_marginEnd="16dp"
                                style="@style/Widget.Material3Expressive.Button.OutlinedButton" />
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/join_button"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Join community" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/final_screen"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/done_icon"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="25dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/intro_illustration_4"
                        android:layout_marginHorizontal="70dp" />
                    <TextView
                        android:id="@+id/final_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginVertical="30dp"
                        android:layout_marginHorizontal="30dp"
                        android:textSize="16dp"
                        android:textColor="?colorOnSurface"
                        android:text="All set! Everything will be ready in a few seconds, ready?" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/start_button"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Let's go!" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/part_2_view"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center">
                <com.google.android.material.loadingindicator.LoadingIndicator
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/Widget.Material3.LoadingIndicator.Contained" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
