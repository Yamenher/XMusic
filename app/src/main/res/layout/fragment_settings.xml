<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:paddingHorizontal="8dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior"
        android:fitsSystemWindows="true"
        app:liftOnScroll="false"
        android:background="@null"
        android:id="@+id/appbar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_height="?attr/collapsingToolbarLayoutLargeSize"
            android:layout_width="match_parent"
            android:id="@+id/collapsingtoolbar"
            android:background="@null"
            app:contentScrim="?colorSurface"
            app:expandedTitleTextAppearance="@style/ExpandedAppBarTextStyle"
            app:expandedTitleSpacing="0dp"
            app:collapsedTitleTextAppearance="@style/CollapsedAppBarTextStyle"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:title="Settings"
                android:background="@null"
                app:navigationIcon="@null"
                android:theme="@style/ThemeOverlay.Material3.Toolbar.CircleNavigationButton"
                app:layout_collapseMode="pin"
                android:id="@+id/toolbar"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="16dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/first_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:padding="12dp"
                android:background="@drawable/rv_ripple_top">

                <ImageView
                    android:id="@+id/first_icon" 
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_brush_variant"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="12dp"
                    android:tint="?colorSecondary"/>
    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="?colorOnSurface"
                        android:text="Appearance" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textColor="?colorOutline"
                        android:text="Theme, Dynamic Colors, OLED theme" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/rv_ripple">

                <ImageView
                    android:id="@+id/second_icon" 
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_tune_round"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="12dp"
                    android:tint="?colorSecondary"/>
    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="?colorOnSurface"
                        android:text="Now Playing" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textColor="?colorOutline"
                        android:text="Components, controls and behavior" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/third_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/rv_ripple">

                <ImageView
                    android:id="@+id/third_icon" 
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_build_outline"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="12dp"
                    android:tint="?colorSecondary"/>
    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="17sp"
                        android:textColor="?colorOnSurface"
                        android:textStyle="bold"
                        android:text="Advanced" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textColor="?colorOutline"
                        android:text="Experimental features, testing options" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/info_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/rv_ripple_bottom">

                <ImageView
                    android:id="@+id/info_icon" 
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_info_outline"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="12dp"
                    android:tint="?colorSecondary"/>
    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="?colorOnSurface"
                        android:text="About XMusic" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textColor="?colorOutline"
                        android:text="More information about XMusic" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
