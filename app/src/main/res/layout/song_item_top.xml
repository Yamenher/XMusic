<com.xapps.media.xmusic.widget.CheckableConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:padding="12dp"
    android:background="@drawable/rv_ripple_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="12dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/songCover"
            android:focusable="false"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/SmallRoundedCornersImage" />
        <FrameLayout
            android:id="@+id/vumeter_frame"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:visibility="invisible"
            android:background="@drawable/active_item_scrim">
            <com.xapps.media.xmusic.widget.VuMeterView
                android:id="@+id/vumeter_view"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="6dp"
                app:vumeter_blockSpacing="4dp"
                app:vumeter_blockNumber="3"
                app:vumeter_backgroundColor="?colorPrimary" />
        </FrameLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/SongTitle"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:text="TextView"
        android:textSize="16sp"
        android:singleLine="true"
        android:lines="1"
        android:textColor="?colorOnSurface"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/frame"
        app:layout_constraintEnd_toStartOf="@+id/options_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/SongArtist"
        app:layout_constraintVertical_chainStyle="packed" />
    <TextView
        android:id="@+id/SongArtist"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="5dp"
        android:textSize="12sp"
        android:singleLine="true"
        android:textColor="?colorOutline"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/frame"
        app:layout_constraintTop_toBottomOf="@+id/SongTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/options_icon" />
    <ImageView
        android:id="@+id/options_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dots_vertical"
        android:background="?selectableItemBackgroundBorderless"
        android:tint="?colorOutline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</com.xapps.media.xmusic.widget.CheckableConstraintLayout>
