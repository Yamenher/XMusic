<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?colorSurface">
        <LinearLayout
            android:id="@+id/fragmentsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionGroup="true"
            android:orientation="horizontal"
            android:layout_weight="1">
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/main_frag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.xapps.media.xmusic.fragment.MusicListFragment"
                android:visibility="gone" />
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/search_frag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.xapps.media.xmusic.fragment.SearchFragment"
                android:visibility="gone" />
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/settings_frag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.xapps.media.xmusic.fragment.SettingsFragment"
                android:visibility="gone" />
        </LinearLayout>
        <View
            android:id="@+id/Scrim"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#000000"
            android:alpha="0" />
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/bottomMixer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_gravity="bottom">
            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/miniPlayerBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="0dp"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                app:layout_behavior="com.xapps.media.xmusic.models.CustomBottomSheetBehavior"
                android:background="@drawable/rounded_corners_bottom_sheet"
                app:layoutDescription="@xml/motion_scene"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clipToOutline="true"
                app:behavior_peekHeight="132dp">
                <com.appbroker.roundedimageview.RoundedImageView
                    android:id="@+id/covers_pager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/miniPlayerBottomSheet"
                    app:layout_constraintTop_toTopOf="parent" />
                <LinearLayout
                    android:id="@+id/miniPlayerDetailsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/covers_pager"
                    app:layout_constraintStart_toEndOf="@+id/covers_pager"
                    app:layout_constraintTop_toTopOf="@+id/covers_pager">
                    <TextView
                        android:id="@+id/currentSongTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No song is being played"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?colorOnSurface"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scrollHorizontally="true" />
                    <TextView
                        android:id="@+id/currentSongArtist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Artist"
                        android:textSize="12sp"
                        android:textColor="?colorOutline"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scrollHorizontally="true" />
                </LinearLayout>
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/musicProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    android:indeterminate="false"
                    app:trackStopIndicatorSize="0dp"
                    app:indicatorTrackGapSize="2dp"
                    app:trackColor="#00000000"
                    app:indicatorColor="?colorPrimary"
                    app:trackThickness="2dp"
                    android:elevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/miniPlayerDetailsLayout"
                    android:layout_marginTop="12dp" />
                <LinearLayout
                    android:id="@+id/controls_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/song_infos_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/header_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <com.xapps.media.xmusic.widget.SmallToggleView
                                android:id="@+id/favorite_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginEnd="10dp"
                                android:padding="12dp"
                                android:scaleType="fitCenter"
                                android:background="@drawable/circle_shape"
                                android:src="@drawable/ic_favorite_outlined"
                                android:tint="?attr/colorOnSurface" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/texts_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/song_big_title"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="5dp"
                                        android:paddingBottom="2dp"
                                        android:textSize="22sp"
                                        android:singleLine="true"
                                        android:ellipsize="marquee"
                                        android:marqueeRepeatLimit="marquee_forever"
                                        android:scrollHorizontally="true"
                                        android:gravity="center"
                                        android:textColor="?colorOnSurface"
                                        android:focusable="true"
                                        android:focusableInTouchMode="true"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />
                                    <TextView
                                        android:id="@+id/artist_big_title"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="5dp"
                                        android:paddingBottom="5dp"
                                        android:textSize="16sp"
                                        android:singleLine="true"
                                        android:ellipsize="marquee"
                                        android:marqueeRepeatLimit="marquee_forever"
                                        android:scrollHorizontally="true"
                                        android:focusable="true"
                                        android:focusableInTouchMode="true"
                                        android:gravity="center"
                                        android:textColor="?colorOutline"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/song_big_title" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </LinearLayout>
                            <com.xapps.media.xmusic.widget.SmallToggleView
                                android:id="@+id/save_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:padding="12dp"
                                android:scaleType="fitCenter"
                                android:background="@drawable/circle_shape"
                                android:src="@drawable/ic_playlist_add"
                                android:tint="?attr/colorOnSurface" />
                        </LinearLayout>
                    </LinearLayout>
                    <SeekBar
                        android:id="@+id/song_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:progress="0"
                        android:thumb="@drawable/seekbar_thumb" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/current_duration_text"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="13sp"
                            android:layout_marginLeft="12dp"
                            android:textColor="?colorOutline"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/total_duration_text"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="13sp"
                            android:layout_marginRight="12dp"
                            android:textColor="?colorOutline" />
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.helper.widget.Flow
                            android:id="@+id/controls_flow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:constraint_referenced_ids="previous_button,toggle_view,next_button"
                            app:flow_horizontalStyle="packed"
                            app:flow_horizontalGap="16dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                        <com.xapps.media.xmusic.widget.SmallToggleView
                            android:id="@+id/previous_button"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="15dp"
                            android:background="@drawable/circle_shape"
                            android:src="@drawable/icon_skip_previous_outline"
                            android:tint="?attr/colorOnSurface" />
                        <com.xapps.media.xmusic.widget.NewPlayerToggle
                            android:id="@+id/toggle_view"
                            android:layout_width="105dp"
                            android:layout_height="105dp"
                            android:gravity="center"
                            android:layout_marginHorizontal="24dp" />
                        <com.xapps.media.xmusic.widget.SmallToggleView
                            android:id="@+id/next_button"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="15dp"
                            android:background="@drawable/circle_shape"
                            android:src="@drawable/icon_skip_next_outline"
                            android:tint="?attr/colorOnSurface" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/lyrics_container"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:background="?colorSurface">
                        <com.xapps.media.xmusic.widget.AppleMeshGradientView
                            android:id="@+id/mesh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <com.xapps.media.xmusic.widget.LyricsView
                            android:id="@+id/lyrics_view"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:clipChildren="false"
                            android:clipToPadding="false" />
                        <com.xapps.media.xmusic.widget.StatusBarScrimView
                            android:id="@+id/lyric_top_scrim"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.coordinatorlayout.widget.CoordinatorLayout
                        android:id="@+id/second_coordinator"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/extendable_layout"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            app:behavior_peekHeight="85dp"
                            android:background="@drawable/rounded_corners_bottom_sheet"
                            app:layout_behavior="com.xapps.media.xmusic.models.CustomBottomSheetBehavior"
                            android:forceHasOverlappingRendering="true">
                            <LinearLayout
                                android:id="@+id/drag_handle"
                                android:layout_width="65dp"
                                android:layout_height="4dp"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/drag_shape" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_horizontal">
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/lyrics_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checkable="true"
                                    style="@style/Widget.Material3Expressive.Button.IconButton.Standard"
                                    app:icon="@drawable/ic_lyrics_selector" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.coordinatorlayout.widget.CoordinatorLayout>
                </FrameLayout>
            </androidx.constraintlayout.motion.widget.MotionLayout>
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:translationY="125dp"
                app:menu="@menu/bnv_menu"
                app:labelVisibilityMode="unlabeled"
                app:itemTextAppearanceActive="@style/BoldStyleBNV" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
