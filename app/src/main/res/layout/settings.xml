<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:paddingHorizontal="8dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior"
        android:fitsSystemWindows="true"
        app:liftOnScrollColor="?colorSurface"
        android:id="@+id/appbar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_height="?attr/collapsingToolbarLayoutLargeSize"
            android:layout_width="match_parent"
            android:id="@+id/collapsingtoolbar"
            app:contentScrim="@android:color/transparent"
            app:expandedTitleTextAppearance="@style/ExpandedAppBarTextStyle"
            app:expandedTitleSpacing="0dp"
            app:collapsedTitleTextAppearance="@style/CollapsedAppBarTextStyle"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:title="Settings"
                app:navigationIcon="@drawable/ic_arrow_back"
                android:theme="@style/ThemeOverlay.Material3.Toolbar.CircleNavigationButton"
                app:layout_collapseMode="pin"
                android:id="@+id/toolbar"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="24dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_pref"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="16dp"
                android:background="@drawable/rv_ripple_top"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/top_content"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Theme"
                        android:textSize="20sp"
                        android:layout_marginBottom="4dp"
                        android:textColor="?colorOnSurface"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Switch between dark and light theme to your liking"
                        android:textSize="14sp"
                        android:textColor="?colorOutline"/>

                </LinearLayout>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="4dp"
                    android:background="@drawable/fully_round_bg"
                    android:layout_marginTop="12dp"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton   
                        android:id="@+id/system_theme"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:text="System"
                    />

                     <com.google.android.material.button.MaterialButton   
                        android:id="@+id/dark_theme"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:text="Dark"
                    />

                     <com.google.android.material.button.MaterialButton   
                        android:id="@+id/light_theme"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:text="Light"
                    />

                </com.google.android.material.button.MaterialButtonToggleGroup>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/first_pref"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:padding="16dp"
                android:background="@drawable/rv_ripple"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/first_content"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Dynamic Theme"
                        android:textSize="20sp"
                        android:layout_marginBottom="4dp"
                        android:textColor="?colorOnSurface"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Use Material you colors for app theme"
                        android:textSize="14sp"
                        android:textColor="?colorOutline"/>

                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/first_switch"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/CustomSwitch"
                />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_pref"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:padding="0dp"
                android:background="@drawable/rv_ripple_bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:padding="16dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/second_content"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Custom Dynamic Color"
                                android:textSize="20sp"
                                android:layout_marginBottom="4dp"
                                android:textColor="?colorOnSurface"/>

                            <ImageView
                                android:id="@+id/icon1"
                                android:layout_height="16dp"
                                android:layout_width="16dp"
                                android:src="@drawable/ic_test_tube"
                                android:tint="?attr/colorError"
                            />

                        </LinearLayout>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Need a color to set different from your Device's? Luckily you have this!"
                            android:textSize="14sp"
                            android:textColor="?colorOutline"/>

                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/second_switch"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        style="@style/CustomSwitch"
                    />
                    
                </LinearLayout>

                <com.rtugeek.android.colorseekbar.ColorSeekBar
                    android:id="@+id/colorSeekBar"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    app:colorSeekBarColorSeeds="@array/material_colors"
                    app:colorSeekBarBarHeight="24dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton   
                        android:id="@+id/apply_button"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_margin="16dp"
                        android:text="Apply" />
                
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
