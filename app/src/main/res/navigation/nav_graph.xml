<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.xapps.media.xmusic.fragment.MusicListFragment"
        android:label="Home Fragment">

        <action
            android:id="@+id/action_open_settings"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="false" />
            
        <action
            android:id="@+id/action_open_search"
            app:destination="@+id/searchFragment" 
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.xapps.media.xmusic.fragment.SettingsFragment"
        android:label="Settings Fragment">
    </fragment>
        
     <fragment
        android:id="@+id/searchFragment"
        android:name="com.xapps.media.xmusic.fragment.SearchFragment"
        android:label="Search Fragment"/>
</navigation>