        <item name="android:layout_width">32dip</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@null</item>
        <item name="android:tint">?colorPrimary</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:importantForAccessibility">no</item>
  </style>
  <style name="CustomTextViewStyle">
    <item name="android:fontFamily">@font/google_sans_flex</item>
