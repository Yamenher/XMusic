<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="SmallRoundedCornersImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="BoldStyleBNV">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/google_sans_flex</item>
        <item name="fontFamily">@font/google_sans_flex</item>
    </style>
    <style name="ExpandedAppBarTextStyle">
         <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/google_sans_flex</item>
        <item name="fontFamily">@font/google_sans_flex</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CollapsedAppBarTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
